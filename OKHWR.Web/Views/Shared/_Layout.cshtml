<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <link href='http://fonts.googleapis.com/css?family=Hanuman' rel='stylesheet' type='text/css'>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-18548170-3']);
      _gaq.push(['_setDomainName', 'khmertext.com']);
      _gaq.push(['_trackPageview']);

      (function () {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

   </script>
</head>

<body>
  <div id="main">
    <div id="header-wrapper">
      <div id="header">@Html.Partial("_Header")</div>
    </div>
    <div class="header-shadow"></div>
    <div id="content-wrapper">
      <div id="content" class="content round">
      @RenderBody()
      </div>
    </div>
    <div id="foot-wrapper">
      <div id="footer">
        Copyright (c) 2012 <a href="@Url.Action("Index","Home")">KhmerText.com</a>. All rights reserved.
      </div>
    </div>
  </div>
    @if (IsSectionDefined("scripts"))
    {
	    @RenderSection("scripts");
    }
</body>
</html>
